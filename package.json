{
  "name": "@natlibfi/melinda-record-import-controller",
  "description": "Controller microservice of Melinda record batch import system",
  "author": {
    "name": "The National Library of Finland"
  },
  "keywords": [],
  "homepage": "https://github.com/natlibfi/melinda-record-import-controller",
  "bugs": {
    "url": "https://github.com/natlibfi/melinda-record-import-controller/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:natlibfi/melinda-record-import-controller.git"
  },
  "license": "AGPL-3.0+",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "check-deps": "npm-check || exit 0",
    "lint": "eslint --fix src",
    "test": "npm run lint",
    "build:transpile": "babel src --source-maps --delete-dir-on-start --out-dir=dist",
    "build": "npm run build:transpile && npm run check-deps",
    "watch:test": "cross-env DEBUG=1 NODE_ENV=test chokidar src -c 'npm test'",
    "watch:dev": "chokidar src -c 'npm run build:transpile && node dist/index.js'"
  },
  "dependencies": {
    "@natlibfi/melinda-record-import-commons": "^2.0.1",
    "@babel/core": "^7.2.0",
    "agenda": "^2.0.2",
    "dockerode": "^2.5.8",
    "lodash": "^4.17.11",
    "node-fetch": "^2.3.0",
    "chai": "^4.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "babel-eslint": "^10.0.1",
    "chokidar-cli": "^1.2.0",
    "cross-env": "^5.1.1",
    "eslint": "^5.9.0",
    "eslint-plugin-import": "^2.14.0",
    "npm-check": "^5.9.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "import"
    ],
    "extends": [
      "xo",
      "plugin:import/errors"
    ],
    "rules": {
      "prefer-arrow-callback": [
        "error"
      ]
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "8"
          }
        }
      ]
    ]
  }
}
